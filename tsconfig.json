{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "target": "esnext",
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules", "src/dev.tsx"]
}
