{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "lib": ["dom", "esnext"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist/types",
    "target": "esnext",
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.dev.tsx", "dist"]
}
