{
  "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
  "pr_template": "- ${{TITLE}} by @${{AUTHOR}} in [#${{NUMBER}}](https://github.com/lytovka/draggable/pull/${{NUMBER}})",
  "categories": [
    {
      "title": "## ğŸš€ Features",
      "rules": [
        {
          "on_property": "title",
          "pattern": "^feat.*",
          "flags": "gui"
        }
      ]
    },
    {
      "title": "## ğŸ› Fixes",
      "rules": [
        {
          "on_property": "title",
          "pattern": "^fix.*",
          "flags": "gui"
        }
      ]
    },
    {
      "title": "## ğŸ§¹ Chores & Maintenance",
      "exclude_labels": [
        "dependencies"
      ],
      "rules": [
        {
          "on_property": "title",
          "pattern": "^chore.*",
          "flags": "gui"
        }
      ]
    },
    {
      "title": "## ğŸ› ï¸ CI",
      "rules": [
        {
          "on_property": "title",
          "pattern": "^ci.*",
          "flags": "gui"
        }
      ]
    },
    {
      "title": "## ğŸ“¦ Dependencies",
      "labels": ["dependencies"]
    }
  ],
  "ignore_labels": ["release", "pre-release"]  
}

